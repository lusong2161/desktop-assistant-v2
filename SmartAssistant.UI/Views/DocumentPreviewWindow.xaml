<Window x:Class="SmartAssistant.UI.Views.DocumentPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Document Preview" Height="600" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock>
            <Run Text="Preview of version from "/>
            <Run Text="{Binding VersionTimestamp, StringFormat={}{0:MM/dd/yyyy HH:mm:ss}}"
                 FontWeight="Bold"/>
            <Run Text=" by "/>
            <Run Text="{Binding VersionUser}" FontWeight="Bold"/>
        </TextBlock>

        <RichTextBox Grid.Row="1" x:Name="PreviewContent"
                     IsReadOnly="True" Margin="0,10">
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </RichTextBox.Resources>
        </RichTextBox>

        <Button Grid.Row="2" Content="Close" Width="80"
                HorizontalAlignment="Right"
                Command="{Binding CloseCommand}"/>
    </Grid>
</Window>
